<view class="home page"><swiper class="home-swiper" indicator-dots="true" autoplay="true" circular="true" indicator-color="#fff" indicator-active-color="#1296db"><block a:for="{{swipeImgUrl}}" a:for-item="item" a:for-index="__i0__" a:key="movieId"><swiper-item><image class="home-image" src="{{item.image}}"></image></swiper-item></block></swiper><view class="home-super-hot page-block"><view class="home-hot-title-wrapper"><image class="home-hot-ico" src="{{hotImg}}"></image><view class="home-hot-title">热门推荐</view></view></view><scroll-view class="home-hot-scroll page-block" scroll-x><block a:for="{{hotImgUrl}}" a:for-item="item" a:for-index="__i1__" a:key="id"><view class="home-hot-scroll-single"><view class="home-hot-scroll-wrapper"><image class="home-hot-scroll-img" src="{{item.cover}}"></image><view class="home-hot-scroll-title">{{item.name}}</view><score vue-id="{{'1-'+__i1__}}" innerScore="{{item.score}}" showScore="1" onVueInit="__l"></score></view></view></block></scroll-view></view>