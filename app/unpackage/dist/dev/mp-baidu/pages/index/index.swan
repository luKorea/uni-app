<view class="home page"><swiper class="home-swiper" indicator-dots="true" autoplay="true" circular="true" indicator-color="#fff" indicator-active-color="#1296db"><block s-for="{{swipeImgUrl}}" s-for-item="item" s-for-index="__i0__" s-key="movieId"><swiper-item><image class="home-image" src="{{item.image}}"></image></swiper-item></block></swiper><view class="home-super-hot page-block"><view class="home-hot-title-wrapper"><image class="home-hot-ico" src="{{hotImg}}"></image><view class="home-hot-title">热门推荐</view></view></view><scroll-view class="home-hot-scroll page-block" scroll-x><block s-for="{{hotImgUrl}}" s-for-item="item" s-for-index="__i1__" s-key="id"><view class="home-hot-scroll-single"><view class="home-hot-scroll-wrapper"><image class="home-hot-scroll-img" src="{{item.cover}}"></image><view class="home-hot-scroll-title">{{item.name}}</view><score vue-id="{{'1-'+__i1__}}" innerScore="{{item.score}}" showScore="1"></score></view></view></block></scroll-view></view>