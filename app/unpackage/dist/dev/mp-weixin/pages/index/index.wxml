<view class="home page"><swiper class="home-swiper" indicator-dots="true" autoplay="true" circular="true" indicator-color="#fff" indicator-active-color="#1296db"><block wx:for="{{swipeImgUrl}}" wx:for-item="swiper" wx:for-index="__i0__" wx:key="movieId"><swiper-item><navigator open-type="navigate" url="{{'../details/details?trailerId='+swiper.movieId}}"><image class="home-image" src="{{swiper.image}}"></image></navigator></swiper-item></block></swiper><view class="home-super-hot page-block"><view class="home-hot-title-wrapper"><image class="home-hot-ico" src="{{hotImg}}"></image><view class="home-hot-title">热门推荐</view></view></view><scroll-view class="home-hot-scroll page-block" scroll-x><block wx:for="{{hotImgUrl}}" wx:for-item="hot" wx:for-index="__i1__" wx:key="id"><view class="home-hot-scroll-single"><view class="home-hot-scroll-wrapper"><navigator open-type="navigate" url="{{'../details/details?trailerId='+hot.id}}"><image class="home-hot-scroll-img" src="{{hot.cover}}"></image></navigator><view class="home-hot-scroll-title">{{hot.name}}</view><score vue-id="{{'1-'+__i1__}}" innerScore="{{hot.score}}" showScore="1" bind:__l="__l"></score></view></view></block></scroll-view><view class="home-super-hot page-block"><view class="home-hot-title-wrapper"><image class="home-hot-ico" src="{{trailerImg}}"></image><view class="home-hot-title">热门预告</view></view></view><view class="home-hot-movie page-block"><block wx:for="{{trailerImgUrl}}" wx:for-item="trailer" wx:for-index="__i2__" wx:key="id"><video class="home-hot-movie-single" id="{{trailer.id}}" src="{{trailer.trailer}}" poster="{{trailer.poster}}" controls data-event-opts="{{[['play',[['playVideo',['$0'],[[['trailerImgUrl','id',trailer.id,'id']]]]]]]}}" bindplay="__e"></video></block></view><view class="home-super-hot page-block"><view class="home-hot-title-wrapper"><image class="home-hot-ico" src="{{hobbyImg}}"></image><view class="home-hot-title">猜你喜欢</view></view></view><view class="home-hobby page-block"><block wx:for="{{hobbyImgUrl}}" wx:for-item="hobby" wx:for-index="gIndex" wx:key="id"><view class="home-hobby-sigle"><navigator open-type="navigate" url="{{'../details/details?trailerId='+hobby.id}}"><image class="home-hobby-img" src="{{hobby.cover}}"></image></navigator><view class="home-hobby-desc"><view class="home-hobby-desc-title">{{hobby.name}}</view><score vue-id="{{'2-'+gIndex}}" innerScore="{{hobby.score}}" showScore="0" bind:__l="__l"></score><view class="home-hobby-desc-info">{{hobby.basicInfo}}</view><view class="home-hobby-desc-info">{{hobby.releaseDate}}</view></view><view class="home-hobby-options" data-gIndex="{{gIndex}}" data-event-opts="{{[['tap',[['praiseClick',['$event']]]]]}}" bindtap="__e"><image class="home-hobby-options-ico" src="{{praiseImg}}"></image><view class="home-hobby-options-me">点赞</view><view class="home-hobby-options-me animation-opacity" animation="{{animationDataArr[gIndex]}}">+1</view></view></view></block></view></view>